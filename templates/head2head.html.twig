{%  include 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% verbatim %}
        <div id="app">
            <div class="row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <wrestler></wrestler>
                </div>
              </div>
        </div>
        {% endverbatim %}
    </div>
{%  endblock %}

{% block javascripts %}
    <script type="module">
        import { createApp } from 'vue'
        import wrestler from "{{ asset('../assets/wrestler.js') }}"

        const app = createApp({
        })
        app.component('wrestler', wrestler)
        app.mount('#app')
    </script>
{% endblock %}
